<Window x:Name="DS18B20SensorViewer" x:Class="WpfOneWireThermo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOneWireThermo"
        mc:Ignorable="d"
        Title="OneWire DS18B20 Sensor" Height="70" Width="160" 
        Deactivated="WindowDeactivated_Event"
        ResizeMode="CanResizeWithGrip" 
        Cursor="Cross" 
        ShowInTaskbar="True" 
        KeyUp="DS18B20SensorViewer_KeyUp" 
        WindowStyle="None" 
        MouseDoubleClick="DS18B20SensorViewer_MouseDoubleClick" 
        Opacity="1.0" MouseDown="DS18B20SensorViewer_MouseDown" 
       AllowsTransparency="True">
    <Viewbox x:Name="viewBox">
        <Label x:Name="temperatureViewer" Content="-128.125*C"  FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,0" />
    </Viewbox>
</Window>
